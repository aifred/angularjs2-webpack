{
  "line"        : true,
  "file"        : true,
  "regexes"      : [
    {
      "fileName"        : "all",
      "scope"           : "line",
      "regex"           : "@@DATAPOWER_BASE_HREF_PROTECTED@@",
      "flags"           : "g",
      "value"           : "http://api.ns.sg/eservice/protected"
    },
    {
      "fileName"        : "all",
      "scope"           : "line",
      "regex"           : "@@DATAPOWER_BASE_HREF_PUBLIC@@",
      "flags"           : "g",
      "value"           : "http://api.ns.sg/eservice/public"
    },
    {
      "fileName"        : "all",
      "scope"           : "line",
      "regex"           : "@@IPPT_HOSTNAME@@",
      "flags"           : "g",
      "value"           : "/v1/ippt"
    },
    {
      "fileName"        : "all",
      "scope"           : "line",
      "regex"           : "@@APP_BASE_HREF@@",
      "flags"           : "g",
      "value"           : "<%= app_base_href %>"
    },
    {
      "fileName"        : "all",
      "scope"           : "line",
      "regex"           : "@@STATIC_BASE_HREF@@",
      "flags"           : "g",
      "value"           : "<%= static_base_href %>"
    }
  ]
}
